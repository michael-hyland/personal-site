{% module "footer", "site" %}
    <nav class="site-menu">
        <ul class="link-list">
        {% for link in footer.links %}
            <li class="link">
                <a href="{{link.url}}" target="_blank">{{ link.text }}</a>
            </li>

            {% if loop.last === false %}
            <li>
                <span class="divider">/</span>
            </li>
            {% endif %}
        {% endfor %}
        </ul>
    </nav>

{% endmodule %}