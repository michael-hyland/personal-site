{% module "header", "site"%} 
    <a href="/" class="logo">
    {% include "components/logo.svg" %}
    <div class="wordmark">
        <span class="title">{{ header.title }}</span>
        <span class="subtitle">{{ header.subtitle }}</span>
    </div>
    </a>

    <hr>

    <nav class="site-menu"> 
        <ul class="link-list">  
        {% for link in header.links %}
            <li class="link">
                <a href="{{ link.url }}">{{ link.text }}</a>
            </li>
            {% if loop.last === false %}
                <span class="divider">/</span>
            {% endif %}
    {% endfor %}  
        </ul>
    </nav>
{%endmodule%}